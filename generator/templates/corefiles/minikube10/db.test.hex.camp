$ORIGIN test.hex.camp.
@	3600 IN	SOA ns1.test.hex.camp. hostmaster.test.hex.camp. (
				{{ serial }} ; serial
				7200       ; refresh (2 hours)
				3600       ; retry (1 hour)
				1209600    ; expire (2 weeks)
				300       ; minimum (5 minutes)
				)

{%- if ips.minikube9_ip %}
@ 3600 IN NS ns1
